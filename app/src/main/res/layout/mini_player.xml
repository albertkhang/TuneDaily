<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/miniPlayer_background"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/mini_player_background"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    
    <com.albertkhang.tunedaily.views.RoundImageView
        android:id="@+id/imgCover"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/colorLight5"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="@id/miniPlayer_background"
        app:layout_constraintBottom_toBottomOf="@id/miniPlayer_background"
        app:layout_constraintLeft_toRightOf="@id/imgCover"
        android:layout_marginLeft="10dp"
        app:layout_constraintRight_toLeftOf="@id/flFavourite"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="songName"
            style="@style/TitleText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="singerName"
            style="@style/DescriptionText"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flSkipNext"
        android:layout_width="42dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/miniPlayer_background"
        app:layout_constraintBottom_toBottomOf="@id/miniPlayer_background"
        app:layout_constraintRight_toRightOf="@id/miniPlayer_background"
        android:layout_marginRight="4dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_skip_next"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flPlayPause"
        android:layout_width="47dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/miniPlayer_background"
        app:layout_constraintBottom_toBottomOf="@id/miniPlayer_background"
        app:layout_constraintRight_toLeftOf="@id/flSkipNext">
        <ImageView
            android:id="@+id/imgPlayPause"
            android:layout_width="20dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_play"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="12dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/flFavourite"
        android:layout_width="46dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="@id/miniPlayer_background"
        app:layout_constraintBottom_toBottomOf="@id/miniPlayer_background"
        app:layout_constraintRight_toLeftOf="@id/flPlayPause">
        <ImageView
            android:id="@+id/imgFavourite"
            android:layout_width="17dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_not_favourite"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="12dp"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>